    </None>
    <None Update="Resources\Themes\MelbaToast\Music\Melba_3.wav">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Resources\Themes\MelbaToast\Music\Melba_s_Toasty_Game.mp3">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Resources\Themes\MelbaToast\Music\Melba_s_Toasty_Game.wav">
